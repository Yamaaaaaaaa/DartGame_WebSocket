<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.NotificationController"
            prefWidth="300" prefHeight="120"
            style="-fx-background-color: #f9f9f9; -fx-border-color: #ccc; -fx-border-radius: 8; -fx-background-radius: 8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 8, 0, 2, 2);">

    <!-- VBox chứa nội dung -->
    <VBox alignment="CENTER" spacing="10.0"
          AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10"
          AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">

        <!-- Nội dung lời mời -->
        <Label fx:id="lblMessage" text="Bạn được mời vào phòng chơi!"
               wrapText="true"
               style="-fx-font-size: 14px; -fx-text-fill: #333;" />

        <!-- HBox chứa nút bấm -->
        <HBox alignment="CENTER" spacing="15">
            <Button text="Đồng ý" onAction="#handleAccept"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 6;"/>
            <Button text="Từ chối" onAction="#handleDecline"
                    style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-background-radius: 6;"/>
        </HBox>
    </VBox>
</AnchorPane>
