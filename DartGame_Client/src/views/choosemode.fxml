<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:id="rootPane"
      fx:controller="controllers.ChooseModeController"
      alignment="CENTER"
      spacing="25"
      prefWidth="900" prefHeight="600">

    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>

    <Label text="Chọn chế độ chơi"
           style="-fx-font-size: 26px; -fx-text-fill: black; -fx-font-weight: bold;"/>

    <Button fx:id="btnPlayWithUser"
            text="Chơi với người chơi khác"
            prefWidth="260"
            style="-fx-font-size: 15px; -fx-background-color: rgba(255,255,255,0.7);
                   -fx-text-fill: black; -fx-background-radius: 10; -fx-font-weight: bold;"/>

    <Button fx:id="btnPlayWithAI"
            text="Chơi với máy"
            prefWidth="260"
            style="-fx-font-size: 15px; -fx-background-color: rgba(255,255,255,0.7);
                   -fx-text-fill: black; -fx-background-radius: 10; -fx-font-weight: bold;"/>

    <HBox alignment="CENTER" spacing="10" VBox.vgrow="ALWAYS">
        <Button fx:id="btnBack"
                text="← Quay lại"
                prefWidth="120"
                onAction="#handleBack"
                style="-fx-font-size: 14px; -fx-background-color: rgba(255,0,0,0.7);
                       -fx-text-fill: white; -fx-background-radius: 10; -fx-font-weight: bold;"/>
    </HBox>
</VBox>
