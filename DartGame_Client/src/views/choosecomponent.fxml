<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:id="rootPane"
            fx:controller="controllers.ChooseOpponentController"
            prefWidth="800" prefHeight="600">

    <VBox alignment="CENTER" spacing="20"
          AnchorPane.topAnchor="50"
          AnchorPane.leftAnchor="50"
          AnchorPane.rightAnchor="50">

        <!-- Tiêu đề -->
        <Label text="Choose Opponent"
               style="
                   -fx-font-size: 28px;
                   -fx-text-fill: black;
                   -fx-font-weight: bold;
                   -fx-effect: dropshadow(gaussian, rgba(255,255,255,0.5), 2, 0.3, 0, 0);
               "/>

        <!-- Bảng danh sách người chơi -->
        <TableView fx:id="userTable"
                   prefHeight="400" prefWidth="650"
                    style="
                        -fx-background-color: rgba(255,255,255,0.5);
                        -fx-background-radius: 12;
                        -fx-border-color: rgba(0,0,0,0.2);
                        -fx-border-radius: 12;
                    ">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="100"/>
                <TableColumn fx:id="colUsername" text="Username" prefWidth="250"/>
                <TableColumn fx:id="colStatus" text="Status" prefWidth="250"/>
            </columns>
        </TableView>

        <!-- Các nút -->
        <HBox alignment="CENTER" spacing="25">
            <Button text="Reload"
                    onAction="#handleReload"
                    style="
                        -fx-background-color: rgba(255,255,255,0.7);
                        -fx-text-fill: black;
                        -fx-font-size: 14px;
                        -fx-font-weight: bold;
                        -fx-background-radius: 10;
                        -fx-padding: 8 20;
                        -fx-border-color: rgba(0,0,0,0.2);
                        -fx-border-radius: 10;
                    "/>

            <Button text="Confirm"
                    onAction="#handleConfirm"
                    style="
                        -fx-background-color: rgba(76, 175, 80, 0.8);
                        -fx-text-fill: white;
                        -fx-font-size: 14px;
                        -fx-font-weight: bold;
                        -fx-background-radius: 10;
                        -fx-padding: 8 25;
                    "/>

            <Button text="Back"
                    onAction="#handleBack"
                    style="
                        -fx-background-color: rgba(244, 67, 54, 0.8);
                        -fx-text-fill: white;
                        -fx-font-size: 14px;
                        -fx-font-weight: bold;
                        -fx-background-radius: 10;
                        -fx-padding: 8 25;
                    "/>
        </HBox>
    </VBox>

</AnchorPane>
