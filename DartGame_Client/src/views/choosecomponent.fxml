<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.ChooseOpponentController"
            prefWidth="800" prefHeight="600">

    <VBox alignment="CENTER" spacing="15.0"
          AnchorPane.topAnchor="50"
          AnchorPane.leftAnchor="50"
          AnchorPane.rightAnchor="50">

        <Label text="Choose Opponent" style="-fx-font-size: 18px;"/>

        <TableView fx:id="userTable" prefHeight="400" prefWidth="600">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="100"/>
                <TableColumn fx:id="colUsername" text="Username" prefWidth="250"/>
                <TableColumn fx:id="colStatus" text="Status" prefWidth="250"/>
            </columns>
        </TableView>

        <HBox alignment="CENTER" spacing="20">
            <Button text="Reload" onAction="#handleReload"/>
            <Button text="Confirm" onAction="#handleConfirm"/>
            <Button text="Back" onAction="#handleBack"/>
        </HBox>
    </VBox>
</AnchorPane>